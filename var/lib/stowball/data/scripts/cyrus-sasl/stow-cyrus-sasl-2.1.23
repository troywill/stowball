do_clean_texinfo () {
    ${SUDO} find ${STOW_DIR}/${PACKAGE_DIR} -name "dir" -okdir mv -v "{}" dir.stow.${PACKAGE_DIR} ";" 2>&1 | tee log.stow.texinfo
}

